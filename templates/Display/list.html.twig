{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <!-- Banner-->
        <div class="row">
            <div class="col-md-12">
                <img class="img-fluid" src="{{ asset('images/banner.jpg') }}" alt="banner">
                <h1 class="text-center mt-2">Headline</h1>
            </div>
        </div>
        <!-- Repository List -->
        <div class="row">
            {% for content in contents %}
                <div class="col-md-4">
                    <img class="article-img" src="{{ asset('images/restaurant.jpg') }}">
                    <div>
                        <a href="{{ path('display_show', { name: content.name}) }}">
                            <h4>{{ content.name }}</h4>
                        </a>
                        <p>{{ content.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
