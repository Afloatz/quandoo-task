{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-sm-12 col-md-8">

                <!-- Banner-->
                <div class="mb-5 pb-3">
                    <img src="{{ asset('images/banner.jpg') }}" alt="cover">
                    <h1 class="text-center mt-2">Headline</h1>
                </div>

                <!-- Repository List -->

                {% for content in contents %}
                <div class="article-container my-1">
                    <a href="{{ path('display_show', { name: content.name}) }}">
                        <img class="article-img" src="{{ asset('images/restaurant.jpg') }}">
                        <div class="article-title d-inline-block pl-3 align-middle">
                            <span>{{ content.description }}</span>
                        </div>
                    </a>
                </div>

                {% endfor %}



            </div>

        </div>
    </div>
{% endblock %}
